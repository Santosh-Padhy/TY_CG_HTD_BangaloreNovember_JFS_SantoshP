<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>mywebapp</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
	<servlet-name>currentDate</servlet-name>
	<servlet-class>com.capg.mywebapp.servlets.DateServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>currentDate</servlet-name>
	<url-pattern>/currentDate</url-pattern>
	
	</servlet-mapping>
	
	<servlet>
	<servlet-name>getEmp</servlet-name>
	<servlet-class>com.capg.mywebapp.servlets.GetEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>getEmp</servlet-name>
	
	<url-pattern>/getEmp</url-pattern>
	
	</servlet-mapping>
	
	<servlet>
	<servlet-name>loginFormJsp</servlet-name>
	<jsp-file>/loginFormJsp.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
	
	<servlet-name>loginFormJsp</servlet-name>
	<url-pattern>/loginForm</url-pattern>
	
	</servlet-mapping>
	<servlet>
	<servlet-name>searchEmpJspForm</servlet-name>
	<jsp-file>/SearchEmpJsp.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
	
	<servlet-name>searchEmpJspForm</servlet-name>
	<url-pattern>/searchEmpJspForm</url-pattern>
	
	</servlet-mapping>
	
	<servlet>
	<servlet-name>deleteFormJsp</servlet-name>
	<jsp-file>/deleteFormJsp.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	
	<servlet-name>deleteFormJsp</servlet-name>
	<url-pattern>/deleteFormJsp</url-pattern>
	
	</servlet-mapping>
	
	<servlet>
	<servlet-name>homePageJsp</servlet-name>
	<jsp-file>/homePagejsp.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	
	<servlet-name>homePageJsp</servlet-name>
	<url-pattern>/home</url-pattern>
	</servlet-mapping>	
	<servlet>

	<servlet-name>addFormJsp</servlet-name>
	<jsp-file>/addFormJsp.jsp</jsp-file>
	

	</servlet>
	<servlet-mapping>
	
	<servlet-name>addFormJsp</servlet-name>
	<url-pattern>/add</url-pattern>
	</servlet-mapping>
	
	
	
	
	<servlet>
	<servlet-name>upDateEmpJSp</servlet-name>
	<servlet-class>/upDateEmpJsp</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
	
	<servlet-name>upDateEmpJSp</servlet-name>
	<url-pattern>/upDateEmpJsp</url-pattern>
	</servlet-mapping>
	
	
	
	
	
</web-app>